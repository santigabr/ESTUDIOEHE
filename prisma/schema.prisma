generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "mongodb"
  url       = env("DATABASE_URL")
}

model Servicio {
  id    String @id @default(cuid()) @map("_id")
  title String
  desc  String
  image String
}

model Creacion {
  id    String @id @default(cuid()) @map("_id")
  title String
  url   String
}

model Asesoramiento {
  id      String @id @default(cuid()) @map("_id")
  title   String
  desc    String
  content String
}

model Planos {
  id        String @id @default(cuid()) @map("_id")
  title     String
  desc      String
  size      String
  bathrooms Int
  rooms     Int
  garages   Int
  suites    Int
  images    String[]
  files     String[]
  price     String
}

model Contacto {
  id       String @id @default(cuid()) @map("_id")
  email    String
  fullname String
  subject  String
  message  String
}

model Size {
  id   String @id @default(cuid()) @map("_id")
  size String
}